{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "ES2019"
        ],
        "resolveJsonModule": true,
        "outDir": "out",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
    },
    "include": [
        "src/**/*.ts",
        "package.json"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
